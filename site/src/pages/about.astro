---
// about.astro - About page with bio and content lanes
import BaseLayout from '../layouts/BaseLayout.astro';
import HtbStats from '../components/HtbStats.astro';

const lanes = [
  {
    name: 'offense',
    color: 'text-[#ef4444]',
    borderColor: 'border-[#ef4444]/20',
    bgColor: 'bg-[#ef4444]/10',
    description: 'CTF walkthroughs, vulnerability research, and ethical hacking writeups. HackTheBox methodology applied to real-world attack paths.'
  },
  {
    name: 'defense',
    color: 'text-[#3b82f6]',
    borderColor: 'border-[#3b82f6]/20',
    bgColor: 'bg-[#3b82f6]/10',
    description: 'Risk engineering, organizational patterns, and compliance reality. What happens when you apply offensive methodology to enterprise risk management.'
  },
  {
    name: 'build',
    color: 'text-[#8b5cf6]',
    borderColor: 'border-[#8b5cf6]/20',
    bgColor: 'bg-[#8b5cf6]/10',
    description: 'AI agent architecture, security tooling, and flow engineering. Building automation that replaces risk registers with actual risk reduction.'
  }
];

const career = [
  { role: 'Product Security Risk Manager', company: 'Red Hat', period: '2025 - Present' },
  { role: 'Program Director, QRadar SIEM & Suite', company: 'IBM', period: '2018 - 2025' },
  { role: 'Director, Development & Business Development', company: 'Blue Spurs', period: '2013 - 2018' },
  { role: 'Development Team Lead, R&D', company: 'BlackBerry', period: '2009 - 2013' },
  { role: 'Senior Consultant', company: 'CGI', period: '2006 - 2009' },
];
---

<BaseLayout title="About" description="Music graduate turned security engineering leader. Top 10 HackTheBox Hall of Fame. Building AI agents for risk management.">
  <!-- Bio Section -->
  <section class="mb-16">
    <h1 class="text-3xl font-bold text-[#f1f5f9] mb-6">About</h1>
    <div class="space-y-4">
      <p class="text-lg text-[#c8d1dc] leading-relaxed">
        I started with a music degree. Not computer science, not engineering — a Bachelor of Music in Performance from Mount Allison University. I still perform — most recently as Uncle Vanya with Next Folding Theatre Company. Music and theatre taught me how to read a room, tell a story, and commit fully to a role. Those skills turned out to be more useful in technology than any certification I've earned since.
      </p>
      <p class="text-lg text-[#c8d1dc] leading-relaxed">
        Over two decades, I moved from consulting to BlackBerry R&D (where I shipped a patent), to leading the teams that built IBM's QRadar Cloud-Native SIEM and the watsonx-powered QRadar Investigation Assistant. Along the way, I landed in the Top 10 on HackTheBox's global Hall of Fame — because I believe you can't defend what you haven't learned to break.
      </p>
      <p class="text-lg text-[#c8d1dc] leading-relaxed">
        Now I work in product security risk management, applying engineering discipline to problems that most organizations solve with spreadsheets and good intentions. I build AI agents that automate risk assessment, and I treat the risk register like a production system — not a filing cabinet.
      </p>
      <p class="text-[#94a3b8] leading-relaxed">
        I speak English and French natively, tech and exec fluently. I'm at ease in front of a 6-person meeting or a 1,000-seat auditorium. I'm always studying something — right now it's multi-agent AI orchestration and EU Cyber Resilience Act compliance.
      </p>
    </div>
  </section>

  <!-- HackTheBox Stats -->
  <section class="mb-16">
    <HtbStats />
  </section>

  <!-- Career Timeline -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold text-[#f1f5f9] mb-6">Career</h2>
    <div class="space-y-4">
      {career.map((item) => (
        <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-4 py-3 border-b border-[#1e293b]">
          <span class="text-sm text-[#64748b] sm:w-36 shrink-0">{item.period}</span>
          <div>
            <span class="text-[#f1f5f9] font-medium">{item.role}</span>
            <span class="text-[#64748b]"> · </span>
            <span class="text-[#94a3b8]">{item.company}</span>
          </div>
        </div>
      ))}
    </div>
    <p class="text-xs text-[#64748b] mt-4">B.Mus. (Performance), Mount Allison University · US Patent 20120314849</p>
  </section>

  <!-- Content Lanes -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold text-[#f1f5f9] mb-6">Content Lanes</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {lanes.map((lane) => (
        <a
          href={`/${lane.name}`}
          class={`block bg-[#111827] border ${lane.borderColor} rounded-xl p-6 hover:border-[#334155] hover:-translate-y-1 transition-all duration-200 group`}
        >
          <div class={`text-xs font-mono font-medium px-3 py-1 rounded-full border inline-block ${lane.color} ${lane.bgColor} ${lane.borderColor} mb-4`}>
            // {lane.name}
          </div>
          <p class="text-sm text-[#94a3b8] leading-relaxed">
            {lane.description}
          </p>
          <div class={`mt-4 flex items-center gap-1.5 text-xs ${lane.color} group-hover:translate-x-1 transition-transform`}>
            View posts
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- Links Section -->
  <section>
    <h2 class="text-2xl font-bold text-[#f1f5f9] mb-6">Find me elsewhere</h2>
    <div class="flex flex-wrap gap-4">
      <a
        href="https://app.hackthebox.com/users/68192"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-[#111827] border border-[#1e293b] rounded-lg px-4 py-2 text-sm text-[#94a3b8] hover:text-[#f1f5f9] hover:border-[#334155] transition-all duration-200"
      >
        HackTheBox
      </a>
      <a
        href="https://infosecwriteups.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-[#111827] border border-[#1e293b] rounded-lg px-4 py-2 text-sm text-[#94a3b8] hover:text-[#f1f5f9] hover:border-[#334155] transition-all duration-200"
      >
        InfoSec Write-ups
      </a>
      <a
        href="https://www.linkedin.com/in/ian-murphy-nb/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-[#111827] border border-[#1e293b] rounded-lg px-4 py-2 text-sm text-[#94a3b8] hover:text-[#f1f5f9] hover:border-[#334155] transition-all duration-200"
      >
        LinkedIn
      </a>
      <a
        href="https://github.com/backspace-shmackspace"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-[#111827] border border-[#1e293b] rounded-lg px-4 py-2 text-sm text-[#94a3b8] hover:text-[#f1f5f9] hover:border-[#334155] transition-all duration-200"
      >
        GitHub
      </a>
    </div>
  </section>
</BaseLayout>
